{
    "name": "facebook/xhp-lib",
    "description": "Class library for XHP",
    "keywords": ["facebook", "xhp", "hhvm", "hack"],
    "homepage": "https://github.com/facebook/xhp-lib",
    "license": ["BSD-3-Clause"],
    "require": {
        "hhvm": "~3.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.1.0",
        "91carriage/phpunit-hhi": "^5.1.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "scripts": {
        "post-autoload-dump": [
            "hhvm bin/generate-autoload-map.php > autoload-map.php"
        ]
    }
}
